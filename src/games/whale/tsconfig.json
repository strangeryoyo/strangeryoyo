{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "types": ["node"],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["../../shared/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true
  },
  "include": [".", "../../shared"]
}
